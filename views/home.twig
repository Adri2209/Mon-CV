			<div class="row mx-auto portfolio-exemple pt-4 pb-4">
				{% include "./addproject.twig" %}
			</div>
		</div>
	</section>
	<section id="experiences" class="experience container-fluid">
		<div class="row">
			<div class="col-lg-10  row align-self-center">
				<p class="d-inline col-lg-1 my-auto">EXPERIENCE</p>
				<img class="col-lg-2 mt-4 rounded img-fluid" src="/images/experience.png" alt="experience">
			</div>
			<div class="timeline row align-self-center col-lg-12 mx-auto">
				<div class="outer">
					<div class="card">
						<div class="info">
							<h6 class="title">CORDERIE DOR</h6>
							<p>2012 à 2022 Aide Comptable
