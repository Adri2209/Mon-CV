{% extends "./main.twig" %}

{% block main %}
	<section id="accueil"class="presentation container-fluid">
		<div class="row">
			<div class="col-lg-10 row align-self-center">
				<p>
					Bonjour,
				</p>
				<p>
					Je suis Adriana TINT &amp je débute dans le monde du Web en tant que Développeur Web Junior.
				</p>
