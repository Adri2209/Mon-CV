						<div class="progress-bar w-50 bg-primary" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
				</div>

				<div class="col-md-5">
					<p>MONGODB</p>
					<div class="progress mb-4" style="height: 20px">
						<div class="progress-bar w-50 bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<p>FIGMA</p>
					<div class="progress mb-4" style="height: 20px">
						<div class="progress-bar w-75 bg-secondary" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<p>PHP</p>
					<div class="progress mb-4" style="height: 20px">
						<div class="progress-bar w-50 bg-info" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
					<p>NODE JS</p>
					<div class="progress mb-4" style="height: 20px">
						<div class="progress-bar w-50 bg-success" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<section class="competence container-fluid">
		<div class="row">
			<div class="col-lg-10 row align-self-center">
				<p>LANGUES</p>
